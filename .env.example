# Server
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/hauspet_db
DB_HOST=localhost
DB_USER=user
DB_PASSWORD=password
DB_NAME=hauspet_db
DB_PORT=5432

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# MongoDB Audit
AUDIT_DB_URI=mongodb://audit_user:audit_pass@localhost:27017/audit_log_db?authSource=admin

# Persistence
PERSISTENCE_TYPE=postgres

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# MCP Server API Token (for Claude Desktop integration)
# This is a long-lived token for the MCP server to authenticate with the API
MCP_API_TOKEN=your-long-lived-api-token-for-mcp-server
