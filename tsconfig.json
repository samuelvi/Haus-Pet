{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["app/*"]
    },
    "rootDir": "./app",
    "outDir": "./dist"
  },
  "include": [
    "app/api/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "tests",
    "playwright.config.ts"
  ]
}
